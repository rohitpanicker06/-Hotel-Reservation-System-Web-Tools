<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.mycompany.hotel_reservation_system.pojo.Room" table="HotelRooms">
        <id name="id" column="id" type="integer">
            <generator class="assigned" />
        </id>
        
        <property name="description" column="descriptions" type="string"/>
        <property name="capacity" column="capacity" type="integer"/>
        <property name="costPerDay" column="costPerDay" type="double"/>
        <property name="photoFilePath" column="photoFilePath" type="string" />
       
    </class>

</hibernate-mapping>